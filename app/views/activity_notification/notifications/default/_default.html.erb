<% if notification.unopened? %>
    <%= link_to open_notification_path_for(notification, move: true), method: :post do %>
        <%= render_notification(@notifications, fallback: :content) %>
    <% end %>
<% else %>
    <%= link_to move_notification_path_for(notification) do %>
        <%= render_notification(@notifications, fallback: :content) %>
    <% end %>
<% end %>

